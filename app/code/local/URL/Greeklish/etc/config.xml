<config>
    <modules>
        <URLGreeklish>
            <version>0.9.0</version>
        </URLGreeklish>
    </modules>
    <global>
        <helpers>
            <urlgreeklish>
                <class>URLGreeklish_Helper</class>
            </urlgreeklish>
			<catalog>
				<rewrite>
					<product_url>URLGreeklish_Helper_Catalog_Product_Url</product_url>
				</rewrite>
			</catalog>
        </helpers>
    </global>
	<frontend>
        <translate>
            <modules>
                <URLGreeklish>
                    <files>
                        <default>URLGreeklish.csv</default>
                    </files>
                </URLGreeklish>
            </modules>
        </translate>
    </frontend>
	<adminhtml>
		<translate>
			<modules>
				<URLGreeklish>
					<files>
						<default>URLGreeklish.csv</default>
					</files>
				</URLGreeklish>
			</modules>
		</translate>
	</adminhtml>
	<default>
		<urlgreeklish>
			<general>
				<enabled>1</enabled>
			</general>
		</urlgreeklish>
	</default>	
</config>